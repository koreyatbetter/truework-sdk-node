{
  "name": "@truework/sdk",
  "version": "0.1.2",
  "description": "Official Truework Node.js SDK",
  "source": "./lib/index.ts",
  "main": "dist/index.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "microbundle watch --target node",
    "build": "microbundle build --target node",
    "test": "ava ./lib/__test__/*.test.ts --verbose",
    "format": "prettier-standard ./lib/*.ts --format",
    "lint": "prettier-standard ./lib/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier-standard --format --staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/truework/truework-sdk-node.git"
  },
  "keywords": [],
  "author": "Truework",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/truework/truework-sdk-node/issues"
  },
  "homepage": "https://github.com/truework/truework-sdk-node#readme",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/nanoassert": "^2.0.0",
    "@types/node": "^14.0.27",
    "@types/sinon": "^9.0.4",
    "ava": "^3.10.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^8.2.0",
    "husky": "^4.2.5",
    "microbundle": "^0.12.0",
    "nock": "^13.0.4",
    "prettier-standard": "^16.4.1",
    "semantic-release": "^17.1.1",
    "sinon": "^9.0.3",
    "ts-node": "^8.10.2"
  },
  "dependencies": {
    "got": "^11.5.2",
    "nanoassert": "^2.0.0",
    "query-string": "^6.13.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
